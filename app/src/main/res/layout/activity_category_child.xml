<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_boutique"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/vline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tb_btn_login_orange_normal">

        <ImageView
            android:id="@+id/boutique_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCheckedChange"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/textBo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="随便打几个字吧"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/bousdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/textBo"
            android:onClick="onCheckedChange"
            android:src="@drawable/arrow2_up" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/hhahah"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/vline"
        android:background="@color/orange"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sort_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableRight="@drawable/arrow_order_down"
            android:paddingRight="5dp"
            android:text="价格" />

        <Button
            android:id="@+id/btn_sort_addtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableRight="@drawable/arrow_order_up"
            android:paddingRight="5dp"
            android:text="上架时间" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hhahah"
        android:layout_marginBottom="1dp"></FrameLayout>
</RelativeLayout>