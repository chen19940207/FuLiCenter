<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_boutique_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/ivBoutiqueImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:src="@drawable/nopic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_toRightOf="@id/ivBoutiqueImg"
        android:background="@color/white"
        android:gravity="top"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <TextView
            android:id="@+id/tvBoutiqueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:text="Aug 111111"
            android:textColor="@color/list_item_title"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvBoutiqueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:text="大约就是这个了"
            android:textColor="@color/list_item_name"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/tvBoutiqueDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:text="what ?"
            android:maxLines="2"
            android:textColor="@color/list_item_des"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>